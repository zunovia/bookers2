<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2 ryota Kaneda</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <body style="padding-top:0px">
          <div class="container">
            <a class="navbar-brand p-1" href="/"><font color="white">Bookersã€€</font></a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
              </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
            <#a class="nav-link" href="/"><#font color="white">Home</#font></#a>

            <% if user_signed_in? %>
             <li class="nav-item">
              <%= link_to "Home", user_path(current_user), class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Users', users_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Books', books_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-light text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
