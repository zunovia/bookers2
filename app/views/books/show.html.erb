<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: white;">
      <h2>User Info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
       <table class="table table-striped">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: 'post-btn-lg' do %>
            <button style="width:340px; height:40px;" type="submit"><i class="fas fa-user-cog">
              </i></button>
        <% end %>
        <% end %>




       <%= form_with model: @newbook do |f| %>
          <h6>Title</h6>
          <%= f.text_field :title, size: "40"  %>
          <h6>Opinion</h6>
          <%= f.text_area :body, size: "43"  %><br>
          <%= f.submit 'Create Book',class: "btn btn-lg btn-primary" %>
        <% end %>
    </div>

    <div class="col-lg-8">
      <h2>Book detail</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>

              <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete,class:"btn btn-danger","data-confirm" => "本当に削除しますか？"%></td>
              <% end %>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
