<div class="container">
  <div class="row">
    <div class="col-12 col-md-3" style="background-color: white;">
      <h2>User Info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table table-white">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
            <th></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
            <th></th>
           </tr>
        </tbody>
      </table>

    <div class="row">
     <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-wrapper col-11 mx-auto" do %>
      <p><i class="fas fa-user-cog"></i></p><% end %>
    </div>

    <br>
    <br>
    <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      <h6>Title</h6>
      <%= f.text_field :title , size: "30" %>
      <h6>Opinion</h6>
      <%= f.text_area :body , size: "33" %><br>
      <%= f.submit 'Create Book' ,class: "btn btn-lg btn-success" %>
      <% end %>
    </div>

<div class="col-12 col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
   <h2>Users</h2>
    <thead>
      <tr>
        <th>image</th>
         <th>name</th>
         <th></th>
      </tr>
    </thead>

    <tbody>
       <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user), method: :get %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
</div>
</div>

