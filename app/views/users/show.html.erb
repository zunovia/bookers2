<div class="container">
 <div class="row">
  <div class="col-lg-4" style="background-color: white;">
   <h2>User Info</h2>
     <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table table-striped">
      <thead>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </thead>
     </table>

        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: 'post-btn-lg' do %>
            <button style="width:340px; height:40px;" type="submit"><i class="fas fa-user-cog">
              </i></button>
        <% end %>
        <% end %>
  <br>
  <br>
  <br>

 <h3>New book</h3>
  <% if @book.errors.any? %>
   <%= @book.errors.count %><font color="red">errors prohibited this obj from being saved:</font>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
      <% end %>
   </ul>
      <% end %>

  <%= form_with model: @book do |f| %>
    <h6>Title</h6>
    <%= f.text_field :title , size: "40" %>
    <h6>Opinion</h6>
    <%= f.text_area :body , size: "43" %>
    <br>
    <%= f.submit 'Create Book',class: "btn btn-lg btn-primary" %>
   <% end %>
 </div>

<div class="col-lg-8">
  <table class="table table-striped">
   <h2>Books</h2>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      <th></th>
      </tr>
   </thead>

   <tbody>
    <% @books.each do |book| %>
     <tr>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>
</div>
