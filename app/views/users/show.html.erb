
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-12 col-md-3" style="background-color: white;">
    <% if flash[:success]%>
    <%= flash[:success]%>
    <%end%>
    <% if @user.errors.any? %>
    <%= @user.errors.count %><font color="red">errors prohibited this obj from being saved:</font>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>

   <h2>User Info</h2>
     <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table table-white">
      <thead>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </thead>
     </table>

    <div class="row">
     <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-wrapper col-11 mx-auto" do %>
      <p><i class="fas fa-user-cog"></i></p><% end %>
    </div>
  <br>
  <br>
  <br>

 <h3>New book</h3>
  <% if @book.errors.any? %>
   <%= @book.errors.count %><font color="red">errors prohibited this obj from being saved:</font>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
      <% end %>
   </ul>
      <% end %>

  <%= form_with model: @book do |f| %>
    <h6>Title</h6>
    <%= f.text_field :title , size: "30" %>
    <h6>Opinion</h6>
    <%= f.text_area :body , size: "33" %>
    <br>
    <%= f.submit 'Create Book',class: "btn btn-lg btn-success" %>
   <% end %>
 </div>

<div class="col-12 col-md-8 offset-md-1" style="background-color: white;">
  <table class="table table-hover table-inverse">
   <h2>Books</h2>
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
        <th>Opinion</th>
      </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
     <tr>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td></td>
        <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>
</div>
